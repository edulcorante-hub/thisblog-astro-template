---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
// importa tutti i file markdown. eager: true = importa immediatamente
const allPosts = await getCollection("blog");
//estrapola i tag dai post
const tags = [
    ...new Set(allPosts.map((post) => post.data.tags ?? []).flat()),
];
const pageTitle = "Tags index page";
---



<BaseLayout pageTitle={pageTitle}>
    <div class="tags">
        {tags.map((tag) => (<p class="tag"><a href={`/tags/${tag}/1/`}>#{tag}</a></p>))}
    </div>
</BaseLayout>
